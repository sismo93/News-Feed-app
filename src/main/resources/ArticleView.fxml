<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.be.ac.ulb.g05.Controller.ArticleViewController">
   <children>
      <HBox fx:id="titleContainer" layoutX="28.0" layoutY="22.0" prefHeight="104.0" prefWidth="740.0">
         <children>
            <Label fx:id="articleTitle" prefHeight="98.0" prefWidth="762.0" wrapText="true">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="imageContainer" layoutX="816.0" layoutY="26.0" prefHeight="200.0" prefWidth="450.0">
         <children>
            <ImageView fx:id="articleImage" fitHeight="200.0" fitWidth="380.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <ScrollPane layoutX="28.0" layoutY="280.0" prefHeight="320.0" prefWidth="1240.0">
         <content>
            <TextArea fx:id="articleContent" prefHeight="302.0" prefWidth="1243.0" wrapText="true">
               <font>
                  <Font size="17.0" />
               </font>
            </TextArea>
         </content>
      </ScrollPane>
      <HBox fx:id="authorContainer" layoutX="1028.0" layoutY="614.0" prefHeight="47.0" prefWidth="240.0">
         <children>
            <Label fx:id="articleAuthor" alignment="CENTER" prefHeight="45.0" prefWidth="240.0">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
