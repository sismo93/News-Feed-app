<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.be.ac.ulb.g05.Controller.ArticleViewController">
   <HBox fx:id="titleContainer" layoutX="28.0" layoutY="22.0" prefHeight="174.0" prefWidth="679.0">
      <Label fx:id="articleTitle" prefHeight="98.0" prefWidth="762.0" wrapText="true">
         <font>
            <Font name="System Bold" size="24.0"/>
         </font>
      </Label>
   </HBox>
   <HBox fx:id="imageContainer" layoutX="715.0" layoutY="31.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="361.0"
         prefWidth="502.0">
      <BorderPane fx:id="mediaView" prefHeight="274.0" prefWidth="509.0"/>
   </HBox>
   <ScrollPane layoutX="28.0" layoutY="410.0" prefHeight="251.0" prefWidth="1240.0">
      <TextArea fx:id="articleContent" prefHeight="242.0" prefWidth="1243.0" wrapText="true">
         <font>
            <Font size="17.0"/>
         </font>
      </TextArea>
   </ScrollPane>
   <HBox fx:id="authorContainer" layoutX="1028.0" layoutY="661.0" prefHeight="47.0" prefWidth="240.0">
      <Label fx:id="articleAuthor" alignment="CENTER" prefHeight="45.0" prefWidth="240.0">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
   </HBox>
   <Label fx:id="mediaLabel" layoutX="40.0" layoutY="226.0" onMouseEntered="#openMediaView"/>
</AnchorPane>
