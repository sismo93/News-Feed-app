<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.be.ac.ulb.g05.Controller.TwitterController">
   <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <JFXButton buttonType="RAISED" onAction="#onSyncTimelinePressed" ripplerFill="WHITE"
                    style="-fx-background-color: #0069c0; -fx-background-radius: 20;" text="SYNC TIMELINE"
                    textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="15.0"/>
            </font>
         </JFXButton>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
         <Label text="Search by tag">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Label>
         <TextField fx:id="addByTagLabel">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </TextField>
         <JFXButton buttonType="RAISED" onAction="#onSearchByTagPressed" ripplerFill="WHITE"
                    style="-fx-background-color: #2196f3; -fx-background-radius: 20;" text="SEARCH"
                    textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="15.0"/>
            </font>
         </JFXButton>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0">
         <Label text="Search by username">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Label>
         <TextField fx:id="addByUsernameLabel">
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </TextField>
         <JFXButton buttonType="RAISED" onAction="#onSearchByUsernamePressed" ripplerFill="WHITE"
                    style="-fx-background-color: #2196f3; -fx-background-radius: 20;" text="SEARCH"
                    textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="15.0"/>
            </font>
         </JFXButton>
      </HBox>
   </VBox>
</AnchorPane>
